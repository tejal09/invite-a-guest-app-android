<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnddd"
    tools:context=".invite">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/invite_toolbar"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:title="Invite"

        />


    <ScrollView
        android:layout_below="@id/invite_toolbar"
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="Host Name: "

                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/host_name"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Host Full Name"
                    android:paddingStart="5dp" />
            </LinearLayout>



                <LinearLayout
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invited By: "

                        />

                    <EditText
                        android:id="@+id/invitedBy"
                        android:textColor="#FFF"
                        android:textColorHint="#B8B8B8"
                        android:inputType="text"
                        android:hint="Institution/Individual Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address: "

                    />
                <EditText
                    android:id="@+id/hostEmailAddress"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="textEmailAddress"
                    android:hint="enter email address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number: "

                    />
                <EditText
                    android:id="@+id/hostContactNumber"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:hint="enter contact number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audience Type: "
                    />
                <EditText
                    android:id="@+id/audienceType"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Students,Employees,Family etc."/>
            </LinearLayout>


            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: " />

                <EditText
                    android:textColor="#FFF"
                    android:inputType="date"
                    android:id="@+id/eventDate"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:paddingStart="15dp" />

            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. of Days: "
                    />
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/noOfDays"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_marginEnd="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours of Engagement: "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/hoursOfEngagement"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="in hours per day"
                    />

            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue: "
                />

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectanglebg"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/venue"
                    android:textColor="#FFF"
                    android:hint="Enter full address here"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:textColorHint="#B8B8B8"
                    android:scrollbars="vertical"
                    android:isScrollContainer="true"
                    android:maxLines="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>


            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget: "/>
                <EditText
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:id="@+id/budget"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="In Thousand ₹"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Details: "/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rectanglebg"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/eventDetails"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:hint="Describe the event in detail"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:lines="5"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expectations from the Guest: "/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rectanglebg"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/guestExpectations"
                    android:textColor="#FFF"
                    android:textColorHint="#81B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:hint="What is the Guest supposed to do in the event? Please provide details.
 "
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:lines="5"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/inviteButton"
                    android:paddingTop="10dp"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:textSize="20dp"
                    android:text="INVITE"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingBottom="10sp"
                    android:background="#6900AA"
                    android:textColor="#FFF"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>