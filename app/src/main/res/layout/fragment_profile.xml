<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrnddd"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:id="@+id/fragment_Profile_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fragment_Profile_guest_name"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Full Name"

                    android:paddingStart="5dp" />
            </LinearLayout>



            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: "

                    />

               <RadioGroup
                   android:id="@+id/radio_gender"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <RadioButton
                       android:id="@+id/radio_male"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Male"
                       android:textSize="18dp"
                       android:textColor="#FFF"
                       android:buttonTint="#FFF"

                       />
                   <RadioButton
                       android:id="@+id/radio_female"
                       android:text="Female"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18dp"
                       android:textColor="#FFF"
                       android:buttonTint="#FFF"
                       />

                   <RadioButton
                       android:id="@+id/radio_transgender"
                       android:text="Transgender"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18dp"
                       android:textColor="#FFF"
                       android:buttonTint="#FFF"
                       />


               </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Photo: "

                    />
                <Button
                    android:id="@+id/profile_picture_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:backgroundTint="@color/colorAccent"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:focusable="true"

                    />
                <Button
                    android:id="@+id/profile_picture_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPLOAD"
                    android:backgroundTint="@color/colorAccent"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:focusable="true"

                    />



            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    />
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/fragment_Profile_age"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_marginEnd="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language: "
                    />
                <EditText
                    android:id="@+id/fragment_Profile_language"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="eg Hindi, English"/>
            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: "
                    />
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/fragment_Profile_city"
                    android:inputType="text"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State: "
                    />
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/fragment_Profile_state"
                    android:inputType="text"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country: "
                    />
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/fragment_Profile_country"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address: "

                    />
                <EditText
                    android:id="@+id/fragment_Profile_EmailAddress"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="textEmailAddress"
                    android:hint="enter email address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number: "

                    />
                <EditText
                    android:id="@+id/fragment_profile_ContactNumber"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:hint="enter contact number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>



            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category: "
                    />
                <EditText
                    android:id="@+id/fragment_profile_category"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="eg singer, dancer, actor"/>
            </LinearLayout>


        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Links: "
                />
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter: "
                    />
                <EditText
                    android:id="@+id/fragment_profile_twitterLink"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="paste link here"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram: "
                    />
                <EditText
                    android:id="@+id/fragment_profile_instagramLink"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="paste link here"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook: "
                    />
                <EditText
                    android:id="@+id/fragment_profile_facebookLink"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="paste link here"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wikipedia: "
                    />
                <EditText
                    android:id="@+id/fragment_profile_wikipedia"
                    android:textColor="#FFF"
                    android:textColorHint="#B8B8B8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="paste link here"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell us about yourself: "
                    />

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rectanglebg"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/fragment_Profile_AboutYou"

                    android:textColorHint="@color/text_shadow_white"
                    android:hint="Write here"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:scrollbars="vertical"
                    android:isScrollContainer="true"
                    android:maxLines="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button

                    android:id="@+id/profile_submitButton"
                    android:paddingTop="10dp"
                    android:layout_width="150sp"
                    android:layout_height="45sp"
                    android:textSize="20dp"
                    android:text="SUBMIT"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingBottom="10sp"
                    android:background="#6900AA"
                    android:textColor="#FFF"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>
</RelativeLayout>